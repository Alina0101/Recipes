
   <h2> Новый рецепт</h2>

        <%= form_with model: @recipe do |form| %>
            <p class= "mt"><%= form.label :title, 'Название рецепта' %></p>
            <p><%= form.text_area :title, rows: 3%></p>
            
            <p class="mt"><%= form.label :body, 'Содержание рецепта' %></p>
            <p><%= form.text_area :body, rows: 5 %></p>

            <p class="mt"><%= form.label :user %></p>
            <p><%= form.text_field :user %></p>

            <p class ="mt-lg"><%= form.submit 'Создать' %></p>
        <% end %>        
    